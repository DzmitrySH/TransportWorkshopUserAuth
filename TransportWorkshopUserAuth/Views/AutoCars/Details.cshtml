@model TransportWorkshopUserAuth.Models.AutoCar

@{
    ViewData["Title"] = "Details";
}

<h1>Детально</h1>

<div>
    <h4>Автомобили</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameAuto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameAuto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mileage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mileage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeFuel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeFuel.Fuel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NormaFuel)
        </dt>
        <dd class="col-sm-10">
            <p>Линейная @Html.DisplayFor(model => model.NormaFuel.Linear)</p>
            <p>Лето @Html.DisplayFor(model => model.NormaFuel.Summer)</p>
            <p>Зима @Html.DisplayFor(model => model.NormaFuel.Winter)</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trailer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trailer.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Driver)
        </dt>
        <dd class="col-sm-10">
            <p>Водитель @Html.DisplayFor(model => model.Driver.FirsLastMidName)</p>
            <p>Кат. @Html.DisplayFor(model => model.Driver.Category)</p>
            <p>Права @Html.DisplayFor(model => model.Driver.RightsNumber)</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeAuto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeAuto.NameType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tire)
        </dt>
        <dd class="col-sm-10">
            <p>Тип @Html.DisplayFor(model => model.Tire.Name)</p>
            <p>Бренд @Html.DisplayFor(model => model.Tire.Brand)</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Harmfulness)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Harmfulness)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Navigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Navigation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Injector)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Injector)
        </dd>
    </dl>
</div>
