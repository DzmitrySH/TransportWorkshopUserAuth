@model IEnumerable<TransportWorkshopUserAuth.Models.TypeFuel>

@{
    ViewData["Title"] = "Index";
}

<h1>Тип Топлива</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
    <a class="btn btn-primary" asp-action="Create">Добавить</a>
    <a class="btn btn-info" asp-action="Index">К полному списку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fuel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.TypeFuelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TypeFuelId">Details</a> |
                 <a asp-action="Delete" asp-route-id="@item.TypeFuelId">Delete</a>*@
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.TypeFuelId">Изменить</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TypeFuelId">Детали</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TypeFuelId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
