@model TransportWorkshopUserAuth.Models.Trailer

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить</h1>

<h4>Прицеп</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Massa" class="control-label"></label>
                <input asp-for="Massa" class="form-control" />
                <span asp-validation-for="Massa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TireId" class="control-label"></label>
                <select asp-for="TireId" class="form-control" asp-items="ViewBag.TireId">
                    <option value="">-- Выберите Покрышку --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a class="btn btn-success" asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
